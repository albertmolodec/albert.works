{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "baseUrl": ".",
    "paths": {
      "~src/*": ["./src/*"],
      "~content/*": ["./content/*"],
      "~static/*": ["./static/*"]
    }
  },
  "include": ["src/**/*", "content/**/*", "static/**/*", "plugins/**/*"],
  "exclude": ["node_modules", "**/node_modules/*", "public"]
}
