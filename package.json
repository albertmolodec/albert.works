{
  "name": "albertmolodec.github.io",
  "version": "2.0.0",
  "description": "My personal site",
  "author": "Albert Abdulmanov <albert.abdu@gmail.com>",
  "homepage": "https://github.com/albertmolodec/albertmolodec.github.io",
  "scripts": {
    "dev": "netlify dev",
    "build": "cross-env ELEVENTY_ENV=production run-s clean build:assets build:html",
    "watch": "env-cmd cross-env ELEVENTY_ENV=development run-s clean build:assets && run-p serve watch:*",
    "serve": "eleventy --serve --port=8080",
    "clean": "rm -rf .parcel-cache dist bundle",
    "lint": "run-p lint:*",
    "update": "run-p update:*",
    "build:html": "eleventy",
    "build:assets": "parcel build ./src/css/app.pcss ./src/js/*.js --dist-dir ./bundle --no-source-maps",
    "watch:assets": "parcel watch ./src/css/app.pcss ./src/js/*.js --dist-dir ./bundle --no-source-maps --no-hmr",
    "update:deps": "npx npm-check-updates",
    "update:cssdb": "npx browserslist@latest --update-db",
    "format": "prettier --write 'src/**/*.js' 'src/**/*.md'",
    "lint:js": "eslint src/**/*.js --ignore-pattern public",
    "lint:css": "stylelint src/**/*.{pcss,css}"
  },
  "dependencies": {
    "@11ty/eleventy": "0.11.1",
    "@11ty/eleventy-plugin-rss": "1.1.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "3.0.6",
    "@tailwindcss/custom-forms": "^0.2.1",
    "@tailwindcss/typography": "^0.4.0",
    "airtable": "^0.10.1",
    "cross-env": "7.0.3",
    "cssnano": "4.1.10",
    "cssnano-preset-advanced": "4.0.7",
    "env-cmd": "^10.1.0",
    "html-minifier": "4.0.0",
    "jsdom": "16.4.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-nightly.558",
    "postcss": "^8.2.4",
    "postcss-import": "^14.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-reporter": "7.0.2",
    "slugify": "1.4.6",
    "tailwindcss": "^2.0.2",
    "turbolinks": "5.2.0"
  },
  "devDependencies": {
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "stylelint": "^13.9.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^4.1.0"
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Safari versions",
    "last 1 Edge versions"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertmolodec/albertmolodec.github.io.git"
  },
  "keywords": [
    "Albert Abdulmanov",
    "personal",
    "portfolio",
    "blog",
    "frontend",
    "development"
  ]
}
