{
  "name": "albertmolodec.github.io",
  "version": "2.0.0",
  "description": "My personal site",
  "author": "Albert Abdulmanov <albert.abdu@gmail.com>",
  "homepage": "https://github.com/albertmolodec/albertmolodec.github.io",
  "scripts": {
    "start": "wmr --public src",
    "build": "wmr build --public src",
    "serve": "wmr serve --public src",
    "lint": "run-p lint:*",
    "format": "prettier --write 'src/**/*.js' 'src/**/*.md'",
    "update": "run-p update:*",
    "update:deps": "npx npm-check-updates",
    "update:cssdb": "npx browserslist@latest --update-db",
    "lint:js": "eslint src/**/*.js --ignore-pattern public",
    "lint:css": "stylelint src/**/*.{pcss,css}"
  },
  "dependencies": {
    "airtable": "^0.10.1",
    "npm-run-all": "^4.1.5",
    "preact": "^10.5.13",
    "preact-iso": "^1.1.1",
    "tailwindcss": "^2.1.1"
  },
  "devDependencies": {
    "@vercel/node": "^1.9.1",
    "eslint": "^7.24.0",
    "eslint-config-preact": "^1.1.3",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^4.1.0",
    "wmr": "^1.5.1"
  },
  "eslintConfig": {
    "extends": [
      "preact",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ]
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/albertmolodec/albert.works.git"
  }
}
