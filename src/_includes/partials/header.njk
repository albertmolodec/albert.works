<header>
  {% if navigation.items %}
    <nav>
      {% for item in navigation.items %}
        {% set relExternal = '' %}
        {% set isCurrentArea = '' %}
        {% set isCurrentClass = '' %}

        {% if item.external %}
          {% set relExternal = ' rel="noopener" target="_blank"' %}
        {% endif %}
        {% if page.url == item.url %}
          {% set isCurrentClass = ' underline' %}
          {% set isCurrentArea = ' aria-current="page"' %}
        {% endif %}
        <a class="{{ isCurrentClass | safe }}" href="{{ item.url }}" {{ relExternal | safe }} {{ isCurrentArea | safe }}>
          {{ item.text }}
        </a>
      {% endfor %}
    </nav>
  {% endif %}
</header>
