---
layout: page
metaTitle: Tag
description: Categories page description
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /blog/tag/{{ tag | slug }}/
---
{% from "components/postItem.njk" import postItem %}

<h1 class="mb-2 font-bold">#{{ tag }}</h1>
<small>{{ collections[tag].length }}
  posts published</small>

<section class="mt-10">
  <ol reversed="reversed">
    {% for post in collections[tag] | reverse %}
      {% if not loop.first %}
        <hr/>
      {% endif %}
      {{ postItem(post.url, post.data.title, post.date, post.data.lang) }}
    {% endfor %}
  </ol>
</section>
