---
import avatar from "../assets/me.webp";
import { Image } from "astro:assets";
import { socials } from "../lib/socials";
import Layout from "../layouts/Layout.astro";
---

<Layout title={"Home"}>
  <div class="flex flex-col sm:flex-row">
    <Image
      alt="My low poly photo"
      format="webp"
      src={avatar}
      width={256}
      height={256}
    />

    <div
      class="leading-tight mt-8 sm:mt-0 sm:ml-8 flex flex-col justify-center"
    >
      <p class="text-2xl md:text-3xl">Hello, I am</p>
      <h1 class="font-semibold text-4xl md:text-5xl">Albert Abdulmanov.</h1>
    </div>
  </div>
  <p class="mt-6 text-lg">This is my little corner on the World Wide Web.</p>
  <p class="mt-2 text-lg">You can also find me at:</p>
  <div class="mt-2 flex space-x-4">
    {
      socials.map((social) => (
        <a
          class="text-gray-500 hover:text-gray-900 transition duration-150 ease-in-out"
          href={social.url}
          target="_blank"
          rel="noreferrer me"
        >
          <social.Icon className="h-6 w-6 inline" />
        </a>
      ))
    }
  </div>
</Layout>
